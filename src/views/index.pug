doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		title link-cutter
		link(rel="stylesheet", type="text/css", href="/public/styles.css")
	body 
		h1#heading Welcome to link-cutter
		input#link(type="text" placeholder="Insert link...")
		br
		br
		button#btn Get Link
		br
		br
		ul#link-list
			each val in links
				li.link-list__item
					a(href=val)= val 	
		script(type='text/javascript', src="/public/index.js") 
		